{%  extends "layout.html.twig" %}
{% block contenu %}
    
    <div class="container">
        <h2>Nouveau client : </h2>
        <form action="index.php?c=GestionClient&a=creerClient" method="POST">
            <div class="form-group">
                <label for="titre">Titre</label>
                <select class="form-control" required id="titre" name="titreCli">
                    <option disabled selected>Choisir</option>
                    <option value="Monsieur">Monsieur</option>
                    <option value="Madame">Madame</option>
                </select>
            </div>
            <div class="form-group">
                <label for="nom">Nom:</label>
                <input type="text" class="form-control" id="nom" placeholder="Nom" name="nomCli" required>
                <label for="prenom">Prénom:</label>
                <input type="text" class="form-control" id="nom" placeholder="Prénom" name="prenomCli" required>
                <label for="adresse">Adresse:</label>
                <input type="text" class="form-control" id="adresse" placeholder="Adresse" name="adresseRue1Cli" required>
                <label for="complement">Complément d'adresse:</label>
                <input type="text" class="form-control" id="complement" placeholder="Complément" name="adresseRue2Cli">
                <label for="CP">Code postal:</label>
                <input type="text" class="form-control" id="cp" placeholder="Code postal" name="cpCli" required>
                <label for="ville">Ville:</label>
                <input type="text" class="form-control" id="ville" placeholder="Ville" name="villeCli" required>
                <label for="tel">Téléphone:</label>
                <input type="text" class="form-control" id="tel" placeholder="Téléphone" name="telCli" required>
            </div>
            <button type="submit" class="btn btn-default">Créer</button>
        </form>  
    </div>
        


    
{% endblock %}
